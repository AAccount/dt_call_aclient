<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dt.call.aclient.screens.main.About">

    <TextView
        android:id="@+id/about_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/about_desc"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/about_desc"/>

    <TextView
        android:id="@+id/about_git"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_desc"
        android:text="@string/about_compile_label"/>

    <TextView
        android:id="@+id/about_git_revision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@id/about_git"
        android:text="@string/about_compile_revision"/>


    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/about_git_revision"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/about_version_label"/>

    <TextView
        android:id="@+id/about_version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_git_revision"
        android:layout_toEndOf="@+id/about_version"
        android:layout_toRightOf="@+id/about_version"
        android:text="@string/about_version_number"/>

    <TextView
        android:id="@+id/about_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_version"
        android:text="@string/about_by_label"/>

    <TextView
        android:id="@+id/about_credits_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_credits"
        android:text="@string/about_people"/>
</RelativeLayout>
