<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".screens.CallIncoming">

    <ImageView
        android:id="@+id/call_incoming_generic_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        android:layout_marginTop="@dimen/call_incoming_vertical_spacing"
        android:contentDescription="@string/initial_user_image_accessibility"
        />

    <TextView
        android:id="@+id/call_incoming_callerid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Caller ID"
        android:layout_below="@+id/call_incoming_generic_person"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/call_incoming_vertical_spacing"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_incoming_reject"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_close_white_48dp"
        android:layout_alignTop="@+id/call_incoming_accept"
        android:layout_toLeftOf="@+id/call_incoming_generic_person"
        android:layout_toStartOf="@+id/call_incoming_generic_person"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/call_incoming_accept"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_done_white_48dp"
        android:layout_marginTop="@dimen/call_incoming_vertical_spacing"
        android:layout_below="@+id/call_incoming_callerid"
        android:layout_toRightOf="@+id/call_incoming_generic_person"
        android:layout_toEndOf="@+id/call_incoming_generic_person"/>
</RelativeLayout>
